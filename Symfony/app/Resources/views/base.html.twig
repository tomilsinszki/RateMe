<!DOCTYPE html>
<html>
    <head>
        <title>RateMe</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, user-scalable=no" />
        
        {% block stylesheets %}
            <link href="{{ asset('css/global.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        
        {% block javascripts %}
            <script src="{{ asset('js/jquery-1.8.3.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/utils.js') }}" type="text/javascript"></script>
        {% endblock %}
    </head>
    <body>
        <div class="bg_grad">
            <div class="content">
                <div class="wrap">
                {% if app.user %}
                    <div>
                        <a style='text-align:right;' href="{{ path('logout') }}">{{ app.user.username }} – kijelentkezés</a>
                    </div>
                {% endif %}
                
                {% block body %}
                {% endblock %}
                </div>
            </div>
        </div>
    </body>
</html>
