{% extends '::base.html.twig' %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('bundles/acmeuser/js/registration.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
    {{ parent() }}

    <form id="form_registration" action="{{ path('acme_user_new') }}" method="post" {{ form_enctype(form) }}>
        <div style="margin-top:10px;">
            <div id="username_ajax_error">
            </div>
            {{ form_errors(form.username) }}
            {{ form_widget(form.username) }}
        </div>

        <div style="margin-top:10px;">
            <div id="password_ajax_error">
            </div>
            {{ form_errors(form.password) }}
            {{ form_widget(form.password) }}
        </div>

        <div style="margin-top:10px;">
            <div id="password_again_ajax_error">
            </div>
            <input id="form_password_again" type="text" />
        </div>

        {{ form_rest(form) }}

        <div style="margin-top:10px;">
            <input id="form_submit" type="submit" value="regisztráció" disabled="true" />
        </div>
    </form>
{% endblock %}
