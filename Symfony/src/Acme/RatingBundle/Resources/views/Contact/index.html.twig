{% extends '::base.html.twig' %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}

{% block body %}
    {{ parent() }}
   
    <script src="{{ asset('bundles/acmerating/js/contact.js') }}" type="text/javascript"></script>
  
    <h2 class="red">{{ form_errors(form.email) }}</h2>
    <h2 class="red">{{ form_errors(form.clientId) }}</h2>
    <h2 class="red">{{ form_errors(form.lastName) }}</h2>
    <h2 id="form_ajax_error_message" class="red"></h2>

    <form action="{{ path('update_contact') }}" method="post" {{ form_enctype(form) }} class="form">
        
        <h3>E-mail</h3>
        <div class="form_input">
            {{ form_widget(form.email) }}
            <div id="email_input_autocomplete_list" class="autocomp_list">
            </div>
        </div>

        <h3>Ügyfélszám</h3>
        <div class="form_input">
            {{ form_widget(form.clientId) }}
            <div id="client_id_input_autocomplete_list" class="autocomp_list">
            </div>
        </div>

        <h3>Vezetéknév</h3>
        <div class="form_input">
            {{ form_widget(form.lastName) }}
        </div>

        <h3>Keresztnév</h3>
        <div class="form_input">
            {{ form_widget(form.firstName) }}
        </div>

        {{ form_rest(form) }}

        <div class="btn_cont save yellow">
            <input type="submit" value="Mentés" />
        </div>
    </form>
    
{% endblock %}
