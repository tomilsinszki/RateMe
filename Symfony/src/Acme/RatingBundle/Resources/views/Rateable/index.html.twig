{% extends '::base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    
    <script src="{{ asset('bundles/acmerating/js/rating.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
    {{ parent() }}

    {% if collection %}
        <div>{{ collection.name }}</div>
    {% endif %}

    <div style="margin-top:20px;">
        <div>{{ rateable.name }}</div>
        <div>{{ rateable.typeName }}</div>
    </div>

    <div>
        <img id="star0" src="{{ asset('images/star_empty_150px.png') }}" alt="Empty Star" style="display:inline; width:150px;"/>
        <img id="star1" src="{{ asset('images/star_empty_150px.png') }}" alt="Empty Star" style="display:inline; width:150px;"/>
        <img id="star2" src="{{ asset('images/star_empty_150px.png') }}" alt="Empty Star" style="display:inline; width:150px;"/>
        <img id="star3" src="{{ asset('images/star_empty_150px.png') }}" alt="Empty Star" style="display:inline; width:150px;"/>
        <img id="star4" src="{{ asset('images/star_empty_150px.png') }}" alt="Empty Star" style="display:inline; width:150px;"/>
    </div>

    <form method="post" action="{{ path('rating_new') }}">
        <input type="hidden" name="rateableId" value="{{ rateable.id }}" />
        <input type="hidden" id="stars" name="stars" />
        <input type="submit" id="submitRating" disabled="true" value="OK" />
    </form>

    <div><a href="{{ path('rateable_mismatch', {'rateableId': rateable.id}) }}">Nem ezt a személyt akartam értékelni</a></div>
{% endblock %}
